<script src="/vendor/OwlCarousel/owl.carousel.js"></script>
<script src="/vendor/semantic/semantic.min.js"></script>
<script src="/js/custom.js"></script>
<script src="/js/night-mode.js"></script>
<script src="https://vjs.zencdn.net/7.10.2/video.min.js"></script>
<script>
    $('#progressButton').attr('data-content',`Total <%=progress.length%> of <%=totalLecture%>`)
    $.extend({
        el: function(el, props) {
            let $el = $($("<"+el+" />"));
            $el.attr(props);
            return $el;
        }
    });
    $(document).ready(function () {
        $('a.lecture').click(function () {
            var myVideo = videojs('my-video');
            myVideo.src([
                {type: "video/mp4", src: `${$(this).data('source')}`}
            ]);
            $('#content_lecture').html($(this).data('content'))
            $('.selected').removeClass('selected')
            $(this).closest('li').addClass('selected')
        })
        $('#progressButton').click(function () {
            $(this).popover('toggle')
        })
        $("input[type='checkbox']").click(function () {
            if ($(this).is(":checked")) {
                $.ajax({
                    async: false,
                    url: "/student/progress/add",
                    type: 'POST',
                    contentType: "application/json; charset=UTF-8",
                    data: JSON.stringify({ id:"<%=course._id%>",section:$(this).data('id') }),
                    success: function (data) {
                        if(data.success)
                        {
                            $('#progressButton').attr('data-content',`Total ${data.progress} of <%=totalLecture%> `)
                        }

                    },
                    error: function (result) {
                        Swal.fire(
                            'Error!',
                            `${JSON.stringify(result)}`,
                            'error'
                        );
                    }

                })
            } else {
                $.ajax({
                    async: false,
                    url: "/student/progress/delete",
                    type: 'POST',
                    contentType: "application/json; charset=UTF-8",
                    data: JSON.stringify({ id:"<%=course._id%>",section:$(this).data('id') }),
                    success: function (data) {
                        if(data.success)
                        {
                            $('#progressButton').attr('data-content',`Total ${data.progress} of <%=totalLecture%> `)
                        }

                    },
                    error: function (result) {
                        Swal.fire(
                            'Error!',
                            `${JSON.stringify(result)}`,
                            'error'
                        );
                    }

                })

            }
        });
    })


</script>
