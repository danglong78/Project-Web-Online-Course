<header class="header clearfix">
    <button type="button" id="toggleMenu" class="toggle_menu">
        <i class='uil uil-bars'></i>
    </button>
    <button id="collapse_menu" class="collapse_menu">
        <i class="uil uil-bars collapse_menu--icon "></i>
        <span class="collapse_menu--label"></span>
    </button>
    <div class="main_logo" id="logo">
        <a href="/"><img src="/images/logo.svg" alt=""></a>
        <a href="/"><img class="logo-inverse" src="/images/ct_logo.svg" alt=""></a>
    </div>
    <%if (currentUser){%>
    <%if(currentUser.role !== "Lecturer"){%>

    <div class=" dropdown">
        <a class="btn btn-outline-danger" href="#" data-toggle="dropdown">
            <span class="material-icons">category
            </span>
        </a>
        <ul class="dropdown-menu">
            <% for (let cat of statics.categories) {%>
                <li class="has-submenu">
                    <a class="dropdown-item" href="#">
                        <%=cat.name %> <span class="dropright dropdown-toggle float-right mt-1"></span>
                    </a>
                    <div class="megasubmenu dropdown-menu">
                        <div class="row">
                            <div class="col-12">
                                <ul class="list-unstyled">
                                    <% for (let subCat of cat.subDetail) { %>
                                        <li><a class="dropdown-item" href=<%="/courses/category/" + subCat._id %> >
                                                <%=subCat.name %>
                                            </a></li>
                                        <% } %>


                                </ul>
                            </div><!-- end col-3 -->

                        </div><!-- end row -->
                    </div>
                </li>
                <% } %>



        </ul>
    </div>
    <%}}else{%>
        <div class=" dropdown">
            <a class="btn btn-outline-danger" href="#" data-toggle="dropdown">
            <span class="material-icons">category
            </span>
            </a>
            <ul class="dropdown-menu">
                <% for (let cat of statics.categories) {%>
                <li class="has-submenu">
                    <a class="dropdown-item" href="#">
                        <%=cat.name %> <span class="dropright dropdown-toggle float-right mt-1"></span>
                    </a>
                    <div class="megasubmenu dropdown-menu">
                        <div class="row">
                            <div class="col-12">
                                <ul class="list-unstyled">
                                    <% for (let subCat of cat.subDetail) { %>
                                    <li><a class="dropdown-item" href=<%="courses/category/" + subCat._id %> >
                                            <%=subCat.name %>
                                        </a></li>
                                    <% } %>


                                </ul>
                            </div><!-- end col-3 -->

                        </div><!-- end row -->
                    </div>
                </li>
                <% } %>



            </ul>
        </div>
    <%}%>

    <div class="search120">
        <form action="/courses/search" method="get">
            <div class="ui search">
                <div class="ui left icon input swdh10">
                    <input class="prompt srch10" type="text" placeholder="Search for anything" name="q">
                    <i class="uil uil-search-alt icon icon1"></i>
                </div>
            </div>
        </form>

    </div>
    <div class="header_right">
        <ul>
            <li class="ui dropdown" tabindex="0">                
                <% if (!currentUser) {%> 
                    <li>
                        <a href="/signup" class="upload_btn">Sign up</a>
                    </li>
                    <li>
                        <a href="/signin" class="upload_btn">Sign in</a>
                    </li> 
                <% } else {%>                     
                    <li class="ui dropdown">
                        <a href="#" class="opts_account">
                            <img src="/images/Anonymous-Avatar.png" alt="">
                        </a>
                        <div class="menu dropdown_account">
                            <div class="channel_my">
                                <div class="profile_link">
                                    <img src="/images/Anonymous-Avatar.png" alt="">
                                    <div class="pd_content">
                                        <div class="rhte85">
                                            <h6><%= currentUser.name %> </h6>
                                            <div class="mef78" title="Verify">
                                                <i class='uil uil-check-circle'></i>
                                            </div>
                                        </div>                                
                                    </div>
                                </div>                                 
                            </div>
                            <div class="night_mode_switch__btn">
                                <% if (currentUser.role === "Student") {%>
                                    <a href="/student/courses" class="item channel_item" style="margin-right: 100px;">My Learning</a>
                                    <a href="/student" class="item channel_item" style="margin-right: 100px;">Profile</a>
                            <% } else if (currentUser.role === "Lecturer") {%>
                                    <a href="/lecturer/setting" class="item channel_item">View Profile</a>
                                    <a href="/lecturer/courses" class="item channel_item">My Courses</a>

                                <% } %>
                                <a href="/signout" class="item channel_item">Sign out</a>
                            </div>                        
                        </div>
                    </li>
                <% } %> 
            </li>
        </ul>
    </div>
</header>